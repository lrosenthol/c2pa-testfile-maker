{
  // Debug configurations
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "simple w/JPG",
      "cargo": {
        "args": [
          "build",
          "--bin=c2pa-testfile-maker",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "c2pa-testfile-maker",
          "kind": "bin"
        }
      },
      "args": [
        "--manifest", "examples/simple_manifest.json",
        "--input", "testfiles/Dog.jpg",
        "--output", "target/output/simple_output.jpg",
        "--cert", "tests/fixtures/certs/ed25519.pub",
        "--key", "tests/fixtures/certs/ed25519.pem",
        "--algorithm", "ed25519",
        "--allow-self-signed"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "simple w/PNG",
      "cargo": {
        "args": [
          "build",
          "--bin=c2pa-testfile-maker",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "c2pa-testfile-maker",
          "kind": "bin"
        }
      },
      "args": [
        "--manifest", "examples/simple_manifest.json",
        "--input", "testfiles/Dog.png",
        "--output", "target/output/simple_output.png",
        "--cert", "tests/fixtures/certs/ed25519.pub",
        "--key", "tests/fixtures/certs/ed25519.pem",
        "--algorithm", "ed25519",
        "--allow-self-signed"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "c2pa-testfile-maker",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=integration_tests",
          "--package=c2pa-testfile-maker"
        ],
        "filter": {
          "name": "integration_tests",
          "kind": "test"
        }
      },
      "args": [],
